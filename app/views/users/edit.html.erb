<!-- マイページ編集ページ -->


<div class="container">
  <h2>User info</h2>
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <!-- nameカラムの変更 -->
    <%= f.text_field :name, autofocus: true %><br>
    <!-- Image_tag -->
    <%= f.label :profile_image, "Image" %>
    <br>
    <%= f.attachment_field :profile_image %>
    <%= f.label :introduction %>
    <!-- nameカラムの変更 -->
    <%= f.text_area :introduction, autofocus: true %>
    <br>
    <%= f.submit "Update User" %>
  <% end %>
</div>