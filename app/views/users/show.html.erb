<!-- マイページ -->

<div class = "container">
    <div class = "row">
        <div class= "col-sm-3">
            <!-- 部分テンプレート呼び出し (引数を与える)-->
            <%= render 'list', user: @user, book: @book %>
        </div>
        <div class= "col-sm-9">
            <h1>Books</h1>
            <!-- セルの間隔を2pxずつ空ける -->
            <table class="table table-striped">
                <thead>
                    <tr align=center>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <!-- 詳細ページのリンクを埋め込み -->
                            <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "profile-img", fallback: "no_image.jpg", size:'40x40' %></td>

                            <td><%= link_to book.title, "/books/#{book.id}" %></td>

                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                    <%= paginate @books, class: "paginate" %>  <!-- kaminariのページング -->
                </tbody>
            </table>
        </div>
    </div>
</div>



