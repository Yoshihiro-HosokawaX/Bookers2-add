<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <!-- 全てに共通のヘッダー部分 -->
  <body>

    <!-- 背景黒 -->
    <header nav="nav" class="navbar navbar-expand-md navbar-dark" style="background-color:#222222;">
      <div class="container">
        <nav class="navbar-nav navbar-left">
          <h4>Bookers</h4>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id)do%><i class="glyphicon glyphicon-home"></i> Home<% end %>
              </li>
              <li>
                <%= link_to  users_path(@user)  do%><i class="glyphicon glyphicon-user"></i>  Users<% end %>
              </li>
              <li>
                <%= link_to  books_path(@book)  do%><i class="glyphicon glyphicon-book"></i>  Books<% end %>
              </li>
              <li >
                <%= link_to  destroy_user_session_path, method: :delete  do%><i class="glyphicon glyphicon-log-out"></i>  logout<% end %>
              </li>
            <% else %>
              <li>
                <%= link_to  "/"  do%><i class="glyphicon glyphicon-home"></i>  Home<% end %>
              </li>
              <li>
                <%= link_to  home_about_path  do%><i class="glyphicon glyphicon-link"></i>  About<% end %>
              </li>
              <li>
                <%= link_to  new_user_registration_path  do%><i class="glyphicon glyphicon-edit"></i>  sign up<% end %>
              </li>
              <li>
                <%= link_to  new_user_session_path  do%><i class="glyphicon glyphicon-log-in"></i>  login<% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <!-- 成功 or 失敗メッセージ -->
    <div class="flash">
      <%= flash[:notice] %>
    </div>

    <%= yield %>

    <footer>
      <div class="container">
      <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
